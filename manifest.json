{
  "manifest_version": 3,
  "name": "YLE Language Learning Subtitles",
  "version": "5.0.0",
  "description": "Learn languages with dual subtitles, popup dictionary, and playback controls on YLE Areena.",
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://areena.yle.fi/*"],
      "run_at": "document_end",
      "js": [
        "lib/lamejs.min.js",
        "platforms/yle/yle-adapter.js",
        "controls/control-icons.js",
        "controls/control-actions.js",
        "controls/control-keyboard.js",
        "controls/audio-filters.js",
        "controls/audio-encoder.js",
        "controls/audio-recorder.js",
        "controls/screen-recorder.js",
        "controls/audio-download-ui.js",
        "controls/control-panel.js",
        "controls/control-integration.js",
        "database.js",
        "utils.js",
        "contentscript.js",
        "inject.js"
      ],
      "css": ["styles.css"]
    }
  ],
  "host_permissions": [
    "https://api-free.deepl.com/*",
    "https://api.deepl.com/*",
    "https://translate.googleapis.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.x.ai/*"
  ],
  "permissions": ["storage", "downloads"],
  "web_accessible_resources": [
    {
      "resources": ["platforms/yle/yle-injected.js"],
      "matches": ["https://areena.yle.fi/*"]
    }
  ],
  "action": {
    "default_title": "YLE Language Learning Subtitles",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "options_page": "extension-options-page/dist/index.html"
}
