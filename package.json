{
  "devDependencies": {
    "@types/chrome": "0.1.31",
    "fake-indexeddb": "6.2.5",
    "jest": "30.2.0",
    "typescript": "5.9.3"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "build:extension": "tsc -p tsconfig.build.json",
    "build:extension:watch": "tsc -p tsconfig.build.json --watch",
    "validate": "npm run type-check && npm test"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "transform": {}
  }
}
