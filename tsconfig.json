{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "ES2020",
    "module": "None",
    "lib": ["ES2020", "DOM", "WebWorker"],
    "strict": false,
    "skipLibCheck": true,
    "types": ["chrome"]
  },
  "include": [
    "database.js",
    "utils.js",
    "background.ts",
    "contentscript.ts",
    "content/**/*.ts",
    "globals.d.ts",
    "popup.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "extension-options-page"
  ]
}
