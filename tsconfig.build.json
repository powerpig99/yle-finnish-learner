{
  "compilerOptions": {
    "allowJs": false,
    "target": "ES2020",
    "module": "None",
    "lib": ["ES2020", "DOM", "WebWorker"],
    "rootDir": ".",
    "outDir": "dist",
    "strict": false,
    "skipLibCheck": true,
    "types": ["chrome"],
    "sourceMap": true
  },
  "include": [
    "background.ts",
    "contentscript.ts",
    "content/**/*.ts",
    "globals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "extension-options-page"
  ]
}
